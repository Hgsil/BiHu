<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        android:id="@+id/back_findPassword"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@mipmap/ic_back"/>
    <TextView
        android:layout_toRightOf="@+id/back_findPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:text="找回密码"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:textSize="23sp"
        android:gravity="center_vertical"/>
    <EditText
        android:id="@+id/username_findPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_findPassword"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColorHint="#cfd8dc"
        android:textSize="18sp"
        android:maxLines="1"
        android:hint="请输入账户信息"/>
    <EditText
        android:id="@+id/password_findPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_findPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColorHint="#cfd8dc"
        android:textSize="18sp"
        android:maxLines="1"
        android:hint="你的密码（不用输入）"/>
    <TextView
        android:id="@+id/confirm_findPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_findPassword"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:text="确认找回"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>