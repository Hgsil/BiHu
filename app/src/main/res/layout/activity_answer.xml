<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/back_answer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@mipmap/ic_back"/>
    <TextView
        android:layout_toRightOf="@+id/back_answer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:text="回答列表"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:textSize="23sp"
        android:gravity="center_vertical"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:src="@mipmap/ic_add"
        android:background="@color/colorPrimary"
        app:elevation="8dp"/>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/back_answer"
        android:id="@+id/answer_cardview"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:layout_margin="5dp"
        app:cardElevation="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/answer_news_avater"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:id="@+id/answer_news_username"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/answer_news_avater"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/answer_news_date"
                android:layout_toRightOf="@+id/answer_news_avater"
                android:layout_below="@+id/answer_news_username"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:textColor="#434141"/>
            <TextView
                android:id="@+id/answer_news_title"
                android:layout_below="@+id/answer_news_avater"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/answer_news_content"
                android:layout_below="@+id/answer_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="#434141"/>
            <TextView
                android:id="@+id/answer_news_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/answer_news_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textColor="#434141"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/answer_news_xian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/answer_news_recent"
                android:background="#434141"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/answer_news_favorite"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/answer_news_xian"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/answer_news_naive"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/answer_news_xian"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/answer_news_favorite"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:textColor="#434141"/>
            <ImageView
                android:id="@+id/answer_news_isNaive_image"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/answer_news_xian"
                android:layout_toLeftOf="@+id/answer_news_naive"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/answer_news_exciting"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/answer_news_xian"
                android:layout_toLeftOf="@id/answer_news_isNaive_image"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:textColor="#434141"
                />


            <ImageView
                android:id="@+id/answer_news_isExciting_image"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/answer_news_xian"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@+id/answer_news_exciting"
                />
            <TextView
                android:id="@+id/answer_news_huifu"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/answer_news_xian"
                android:layout_toLeftOf="@+id/answer_news_isExciting_image"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/answer_news_huifu_image"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/answer_news_xian"
                android:layout_toLeftOf="@+id/answer_news_huifu"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView><android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/answer_swipeRefresh"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/answer_recycler"
        android:layout_below="@+id/answer_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
